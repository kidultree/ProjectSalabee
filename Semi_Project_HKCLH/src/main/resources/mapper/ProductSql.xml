<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.ShopMapperInter">
	<!-- Semi Product -->
	
   <insert id="insertProduct" parameterType="product"> <!-- ProductDtoì˜ @Alias("product") -->
      insert into product (pname, pprice, pcate, prate, pratecnt, pdate, pphoto) values (
      #{pname}, #{pprice}, #{pcate}, #{prate}, #{pratecnt}, #{pdate}, #{pphoto}
      )
   </insert>
   
   <select id="getProductList" parameterType="Map" resultType="product">
      select * from product order by pnum desc limit #{start}, #{perpage}
   </select>
   
   <select id="getProduct" parameterType="int" resultType="product">
      select * from product where pnum = #{pnum}
   </select>
   
   <delete id="deleteProduct" parameterType="int">
      delete from product where pnum=#{pnum}
   </delete>
   
   <select id="getTotalProductCount" resultType="int">
      select count(*) from product
   </select>
   
</mapper>
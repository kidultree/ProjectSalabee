<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.QnAMapperInter">

<!-- qna 삽입 -->
<insert id="insertQnA" parameterType="notice">
insert into qna (qnum, ntitle, nname, ncontent, nphoto, ndate) values (
#{nnum}, #{ntitle}, #{nname}, #{ncontent}, #{nphoto}, now()
)
</insert>


<!-- 리스트 -->
<select id="getQnAList" resultType="notice">
	select * from qna
</select>


<!-- 수정 -->
<select id="getQnA" parameterType="int" resultType="product">
select * from qna where nnum = #{nnum}
</select>


<!-- 삭제 -->
<delete id="deleteQnA" parameterType="int">
delete from qna where nnum=#{nnum}
</delete>


<select id="getTotalQnACount" resultType="int">
select count(*) from qna
</select>


</mapper>
	
	